doctype html
html
  head
    meta(charset='utf-8')
    title
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='/js/jquery.js')
    link(rel='stylesheet',href="/css/summernote.css")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/lumen/bootstrap.min.css')
    link(rel='stylesheet', href='https://daneden.github.io/animate.css/animate.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js')
    script(src="/js/summernote.min.js")
  body
    .container
      .row
        a.btn.btn-primary(href='/admin/chambre' role="button") Retour
        .panel.panel-primary
          .panel-heading Ajout Chambre
          .panel-body
            form#summernoteForm.form-horizontal(action="/admin/chambre/add" method='post' ,encType="multipart/form-data")
              .form-group
                label.col-xs-3.control-label(for='sel1') Sélectionner le thème (pour les dossiers):
                .col-xs-5
                  select#sel1.form-control(name="sel1")
                    option Zen
                    option Renoir
                    option Romance
                    option Azur
                    option Appartement
              .form-group
                label.col-xs-3.control-label Titre Chambre
                .col-xs-5
                  input.form-control(type='text', name='title')
              .form-group
                label.col-xs-3.control-label Description
                .col-xs-9
                  textarea.form-control(name='description', style='height: 400px;')
              .form-group
                label.col-xs-3.control-label Equipements
                .col-xs-9
                  textarea.form-control(name='equipements', style='height: 400px;')
              .form-group
                label.col-xs-3.control-label Images
                .col-xs-9
                  input.form-control(type='file', name='images1')
                  input.form-control(type='file', name='images2')
                  input.form-control(type='file', name='images3')
                  input.form-control(type='file', name='images4')
              .form-group
                .col-xs-9.col-xs-offset-3
                  button.btn.btn-default(type='submit') Valider
script.
  $(document).ready(function() {
  $('#summernoteForm').find('[name="description"]').summernote({
  height: 400
  }).on('summernote.change', function(customEvent, contents, $editable) {
  $('#summernoteForm').formValidation('revalidateField', 'content');
  }).end();
  $('#summernoteForm').find('[name="equipements"]').summernote({
  height: 400
  }).on('summernote.change', function(customEvent, contents, $editable) {
  $('#summernoteForm').formValidation('revalidateField', 'content');
  }).end();
  });
