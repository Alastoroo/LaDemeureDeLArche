doctype html
html
  head
    meta(charset='utf-8')
    title
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='/js/jquery.js')
    link(rel='stylesheet',href="/css/summernote.css")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/lumen/bootstrap.min.css')
    link(rel='stylesheet', href='https://daneden.github.io/animate.css/animate.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js')
    script(src="/js/summernote.min.js")
  body
    .container
      .row
        a.btn.btn-primary(href='/admin/demeure' role="button") Retour
        .panel.panel-primary
          .panel-heading Ajout Equipement
          .panel-body
            form#summernoteForm.form-horizontal(method='post',action='/admin/demeure/add/equipement' ,enctype='multipart/form-data')
              .form-group
                label.col-xs-3.control-label Titre Equipement
                .col-xs-5
                  input.form-control(type='text', name='title')
              .form-group
                label.col-xs-3.control-label Contenue Equipement
                .col-xs-9
                  textarea.form-control(name='content', style='height: 400px;')
              .form-group
                label.col-xs-3.control-label Image Equipement
                .col-xs-5    
                  input.form-control(type='file', name='sampleFile')
              .form-group
                .col-xs-9.col-xs-offset-3
                  button.btn.btn-default(type='submit') Submit
script.
  $(document).ready(function() {
  $('#summernoteForm').find('[name="content"]').summernote({
  height: 400
  }).on('summernote.change', function(customEvent, contents, $editable) {
  $('#summernoteForm').formValidation('revalidateField', 'content');
  }).end();
  });
